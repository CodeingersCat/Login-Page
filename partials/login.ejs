<div class="login-container">
    <form action="login" class="form" method="post">
        <label for="username">Email</label>
        <%- `<input type="email" id="email" name="email_field" placeholder="Enter email" value=${email}>` %>
        <label for="password">Password</label>
        <input type="password" id="password" name="password_field" placeholder="Enter password" required minlength="8" pattern="(^(?=.*[a-zA-Z])(?=.*[0-9])[A-Za-z0-9]+$)" title="Must be alphanumeric"> 
        <input type="submit" id="submit" value="Log In">
    </form>
    <p id="error-msg"><%= errors  %> </p>
    <a href="/forgotpw" class="forgotpw">Forgot password ?</a>
</div>
